<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER AUTHOR="cimt AG" COMPATIBILITY="ALL"
		DATA_AUTO_PROPAGATE="true" PLATEFORM="ALL" RELEASE_DATE="20160413"
		SERIAL="" STARTABLE="true" STATUS="PROD" VERSION="5.0">
		<SIGNATURE />
	</HEADER>
	<FAMILIES>
		<FAMILY>Management</FAMILY>
	</FAMILIES>
	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>
	<CONNECTORS>
	    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
	    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="COMPONENT_OK" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
	    <CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>
	<PARAMETERS>
	
		<PARAMETER 
			NAME="USE_DATA_SOURCE" 
			FIELD="CHECK"
			NUM_ROW="1">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="DATA_SOURCE_ALIAS" 
			FIELD="TEXT" 
			NUM_ROW="2"
			REQUIRED="true" 
			SHOW_IF="(USE_DATA_SOURCE == 'true')">
			<DEFAULT>"dwh_meta"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="USE_DATA_SOURCE_ALIAS_AS_DBNAME" 
			FIELD="CHECK" 
			NUM_ROW="3"
			REQUIRED="true" 
			SHOW_IF="(USE_DATA_SOURCE == 'true')">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

    	<PARAMETER
	      	NAME="CONNECTION"
	      	FIELD="COMPONENT_LIST"
	      	FILTER="REGEXP:^(.)*(Connection)(.)*"
	      	NUM_ROW="8" 
	      	REQUIRED="true"
	      	SHOW_IF="(USE_DATA_SOURCE == 'false')"
    	/>

	    <PARAMETER 
	    	NAME="CLOSE_CONNECTION" 
	    	FIELD="CHECK" 
	    	SHOW_IF="(USE_DATA_SOURCE == 'true')"
	    	NUM_ROW="10">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE"
			REQUIRED="true" NUM_ROW="20" >
			<TABLE READONLY="true">
				<COLUMN NAME="JOB_INSTANCE_ID" TYPE="id_Long" READONLY="true"
					CUSTOM="true" LENGTH="16" KEY="true" NULLABLE="false" COMMENT="Job Instance ID"/>
				<COLUMN NAME="JOB_NAME" TYPE="id_String" READONLY="true"
					CUSTOM="true" LENGTH="128" KEY="false" NULLABLE="false" COMMENT="Job Name"/>
				<COLUMN NAME="JOB_TALEND_PID" TYPE="id_String" READONLY="true"
					CUSTOM="true" LENGTH="16" NULLABLE="false" COMMENT="Talend PID"/>
				<COLUMN NAME="JOB_HOST_PID" TYPE="id_Integer" READONLY="true"
					CUSTOM="true" LENGTH="10" NULLABLE="false" COMMENT="OS PID"/>
				<COLUMN NAME="JOB_STARTED_AT" TYPE="id_Date" READONLY="true"
					CUSTOM="true" LENGTH="12" PATTERN="&quot;yyyy-MM-dd HH:mm:ss&quot;" KEY="false" NULLABLE="false" COMMENT="Job Start Time"/>
				<COLUMN NAME="JOB_WORK_ITEM" TYPE="id_String" READONLY="true"
					CUSTOM="true" LENGTH="128" NULLABLE="false" COMMENT="Job Work Item"/>
			</TABLE>
		</PARAMETER>
		<PARAMETER FIELD="TEXT" NAME="LAST_SYSTEM_START" NUM_ROW="30">
			<DEFAULT></DEFAULT>
		</PARAMETER>
	</PARAMETERS>
	<ADVANCED_PARAMETERS>
		<PARAMETER FIELD="CHECK" NAME="USE_PROJECT_SPECIFIC_NAMES" NUM_ROW="10">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER FIELD="TEXT" NAME="PROJECT_SPECIFIC_NAME_MAP_RESOURCE" NUM_ROW="15" SHOW_IF="USE_PROJECT_SPECIFIC_NAMES == 'true'" >
			<DEFAULT>"my_project"</DEFAULT>
		</PARAMETER>
		<PARAMETER FIELD="TEXT" NAME="SCHEMA_NAME" NUM_ROW="20" />
		<PARAMETER FIELD="TEXT" NAME="TABLE_NAME" NUM_ROW="20" SHOW_IF="USE_PROJECT_SPECIFIC_NAMES == 'false'" >
			<DEFAULT></DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>
	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="cimt.talendcomp.jobinstances" MODULE="cimt.talendcomp.jobinstances-5.0.jar" REQUIRED="true" />
			<IMPORT NAME="log4j" MODULE="log4j-1.2.17.jar" REQUIRED="true" />
			<!-- the name part "user" must match to the value in parameter PROJECT_SPECIFIC_NAME_MAP_RESOURCE
			<IMPORT NAME="custom_mapping_test" MODULE="mapping_user.properties.jar" REQUIRED="true" />
			 -->
		</IMPORTS>
	</CODEGENERATION>
	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="COUNT_RUNNING_PROCESSES" TYPE="id_Integer" />	
		<RETURN AVAILABILITY="AFTER" NAME="COUNT_RUNNING_JOB_INSTANCES" TYPE="id_Integer" />	
		<RETURN AVAILABILITY="AFTER" NAME="COUNT_BROKEN_JOB_INSTANCES" TYPE="id_Integer" />	
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer" />	
	</RETURNS>
</COMPONENT>